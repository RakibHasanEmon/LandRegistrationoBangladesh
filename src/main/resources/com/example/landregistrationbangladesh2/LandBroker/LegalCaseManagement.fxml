      fx:controller="LandBroker.LegalCaseManagementController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    
    <Label text="LegalCaseManagement" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Button text="Log Active Cases" fx:id="btnEvent1"/>
    <Button text="Tag Cases with Deadlines" fx:id="btnEvent2"/>
    <Button text="Receive Court Alerts" fx:id="btnEvent3"/>
    <Button text="Update Case Status" fx:id="btnEvent4"/>
    <Button text="Archive Resolved Cases" fx:id="btnEvent5"/>
